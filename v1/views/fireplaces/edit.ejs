<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="formInput">
            <h2 style="text-align: center;">Edit Fireplace</h2>
            <form action="/fireplaces/<%= fireplace._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="fireplace[image]" value="<%= fireplace.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fireplace[description]"
                        value="<%= fireplace.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="fireplace[price]" min="999.0" step="34.0"
                        value="<%= fireplace.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/fireplaces">Back to fireplaces</a>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>