<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h2>Edit Comment</h2>
        <div class="formInput">
            <form action="/fireplaces/<%= fireplace_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" value="<%= comment.author %>">
                </div>
                <div class="form-group">
                    <button class=" btn btn-lg btn-warning btn-block">Submit</button>
                </div>
                <a href="/fireplaces">Go Back To Fireplaces</a>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>